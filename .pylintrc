[MESSAGES CONTROL]
# Disable specific warnings
disable=W1203,logging-fstring-interpolation,
    C0103,  # invalid-name (for single letter variables in loops)
    R0903,  # too-few-public-methods (allow simple data classes)
    R0913,  # too-many-arguments (some functions legitimately need many args)

[FORMAT]
# Set the maximum line length to match ruff/black
max-line-length=88

# String quote consistency
string-quote=double-quote-avoid-escape

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,Run,_,f,e,x,y,z,logger,console,P

# Naming patterns aligned with your codebase conventions
class-naming-style=PascalCase
function-naming-style=snake_case
method-naming-style=snake_case
variable-naming-style=snake_case
const-naming-style=UPPER_CASE
module-naming-style=snake_case

# Class patterns observed in your codebase
class-rgx=[A-Z][a-zA-Z0-9]*(Core|Context|Script|Type|Executable)?$

[DESIGN]
# Increased limits to match your codebase patterns
max-args=12
max-attributes=20
max-bool-expr=7
max-branches=20
max-locals=25
max-parents=7
max-public-methods=30
max-returns=10
max-statements=80
min-public-methods=0  # Allow classes with only static methods

[SIMILARITIES]
# Minimum lines number of a similarity.
min-similarity-lines=6

# Ignore comments when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

[TYPECHECK]
# List of decorators that produce context managers
contextmanager-decorators=contextlib.contextmanager

[IMPORTS]
# Preferred import style
preferred-modules=pathlib:Path

[LOGGING]
# Logging modules to check that the string format arguments are in logging function parameter format
logging-modules=logging

[MISCELLANEOUS]
# List of note tags to take in consideration, separated by a comma.
notes=FIXME,XXX,TODO,NOTE,HACK